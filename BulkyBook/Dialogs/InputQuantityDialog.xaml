<Window x:Class="BulkyBook.Dialogs.InputQuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulkyBook.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Quantity" Height="200" Width="200">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Nhập số lượng:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtQuantity" HorizontalAlignment="Stretch"/>
            <Button Content="Xác nhận" Click="Confirm_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
