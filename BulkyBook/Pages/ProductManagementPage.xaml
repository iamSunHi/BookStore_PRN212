<Page
    x:Class="BulkyBook.Pages.ProductManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BulkyBook.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProductManagementPage"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top">
            <Label
                x:Name="lblTitle"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Product Management"
                FontSize="36"
                FontWeight="DemiBold"
                Foreground="White" />
            <DockPanel>
                <Label
                    x:Name="lblSearch"
                    VerticalAlignment="Center"
                    Content="Search:"
                    DockPanel.Dock="Left"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="White" />
                <TextBox
                    x:Name="txtSearch"
                    Margin="5"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Foreground="White"
                    KeyUp="txtSearch_KeyUp" />
            </DockPanel>
        </StackPanel>

        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button
                x:Name="btnLoad"
                Grid.Column="0"
                Margin="5"
                Background="DarkGreen"
                Click="btnLoad_Click"
                Content="Load"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                x:Name="btnInsert"
                Grid.Column="1"
                Margin="5"
                Background="DarkBlue"
                Click="btnInsert_Click"
                Content="Insert"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                x:Name="btnDelete"
                Grid.Column="2"
                Margin="5"
                Background="DarkRed"
                Click="btnDelete_Click"
                Content="Delete"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                x:Name="btnClose"
                Grid.Column="3"
                Margin="5"
                Background="DarkGray"
                Click="btnClose_Click"
                Content="Close"
                FontWeight="Bold"
                Foreground="White" />
        </Grid>

        <DataGrid
            x:Name="dgvProduct"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="All"
            IsReadOnly="True"
            MouseDoubleClick="dgvProduct_MouseDoubleClick"
            SelectionMode="Single"
            SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="ID" />
                <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="Description">
                    <!--
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    -->
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding ISBN}" Header="ISBN" />
                <DataGridTextColumn Binding="{Binding Author}" Header="Author" />
                <DataGridTextColumn Binding="{Binding Price}" Header="Price" />
                <DataGridTextColumn Binding="{Binding ImageUrl}" Header="ImageUrl">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Category.Name}" Header="Category" />
                <DataGridTextColumn Binding="{Binding CoverType.Name}" Header="Cover Type" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
